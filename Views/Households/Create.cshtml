@model Finportal.Models.Household

@{
    ViewData["Title"] = "Create";
}
<div class="container">

    <div class="card">
        <div class="card-header text-center">
            <h1>Create</h1>

            <h4>Household</h4>
         </div>
        <div class="card-body">

            <div class="row housecreate">
                <div class="col-md-4">
