                                            <label asp-for="CategoryItemId" class="control-label"></label>
                                            <select asp-for="CategoryItemId" class="form-control" asp-items="ViewBag.CategoryItemId"></select>
                                            <span asp-validation-for="CategoryItemId" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="BankAccountId" class="control-label"></label>
