@model Finportal.Models.Transaction
@using Finportal.Enum
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row mt-md-3">
        <div class="col-md widget p-3 mr-md-3 ml-md-3">
            <div id="card-527430">
                <div class="card">
                    <div class="card-header">
                        <a class="card-link" data-toggle="collapse" data-parent="#card-527430" href="#card-element-659825"> <h3>Create A Transaction</h3></a>
                    </div>
                    <div id="card-element-659825" class="collapse show">
                      
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col p-3">
                                    <form asp-action="Create">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        @Html.Hidden("HouseholdId", ViewData["HouseholdId"])
