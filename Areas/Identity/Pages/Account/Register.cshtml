<div class="form-container outer">
    <div class="form-form">
        <div class="form-form-wrap">
            <div class="form-container">
                <div class="form-content">

                    <h1>@ViewData["Title"]</h1>

                    <div class="row">
                        <div class="col-md-4">
                            <form asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
                                @Html.Hidden("Input.Code", Model.Code ?? "")

                                <h4>Create a new account.</h4>
                                <hr />
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="Input.FirstName"></label>
                                    <input asp-for="Input.FirstName" class="form-control" placeholder="Jon" />
                                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Input.LastName"></label>
                                    <input asp-for="Input.LastName" class="form-control" placeholder="Doe" />
                                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Input.Email"></label>
                                    @if (!string.IsNullOrEmpty(Model.Email))
                                    {
                                        @Html.HiddenFor(model => model.Email)
                                        <input asp-for="Input.Email" class="form-control" value="@Model.Email" />
                                    }
                                    else
                                    {
                                        <input asp-for="Input.Email" class="form-control" value="@Model.Email" />

                                    }
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Input.Password"></label>
                                    <input asp-for="Input.Password" class="form-control" />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Input.FormFile"></label>
                                    <input asp-for="Input.FormFile" type="file" />
                                    <span asp-validation-for="Input.FormFile" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Input.ConfirmPassword"></label>
                                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>
                                <button type="submit" class="btn btn-primary">Register</button>
                                <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Back To Login</a>
                            </form>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
    </div>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />

        <script>
            $("#Input_LastName, #Input_FirstName, #Input_Password").val("");
        </script>
    }
